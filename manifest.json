{
  "manifest_version": 3,
  "name": "University Course Seat Monitor",
  "version": "1.0",
  "description": "Monitor university advising portal for available course seats",
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://*.edu/*",
    "http://*.edu/*",
    "https://rds3.northsouth.edu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.edu/*", "http://*.edu/*", "https://rds3.northsouth.edu/*", "file://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Course Seat Monitor"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
